{
  "manifest_version": 3,
  "name": "HTTPS Shield",
  "version": "0.2.0",
  "description": "AI-powered HTTPS security assistant with pre-warning protection",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "webNavigation",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.js"],
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "HTTPS Shield"
  },
  "web_accessible_resources": [{
    "resources": [
      "src/pages/risk-assessment.html",
      "src/pages/risk-assessment.css",
      "src/pages/risk-assessment.js",
      "src/pages/welcome.html",
      "src/pages/welcome.js",
      "icons/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "intercept_rules",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}