{
  "manifest_version": 3,
  "name": "HTTPS Shield",
  "version": "0.1.0",
  "description": "AI-powered HTTPS security assistant",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.js"],
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "HTTPS Shield"
  }
}